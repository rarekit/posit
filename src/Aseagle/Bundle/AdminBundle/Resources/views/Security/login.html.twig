{% extends 'AseagleAdminBundle::layout.login.html.twig' %}
{% block body %}
<form class="login-form" action="{{path('admin_logincheck')}}" method="post">
    <h3 class="form-title">{{'Login to your account'|trans}}</h3>
    {% if error %}
        <div class="alert alert-danger">
            <button class="close" data-close="alert"></button>
            <span>{{ 'Tên đăng nhập hoặc mật khẩu không chính xác'|trans }} </span>            
        </div>
    {% endif %} 
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">{{'Username'|trans}}</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="{{'Username'|trans}}" name="_username"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">{{'Password'|trans}}</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="{{'Password'|trans}}" name="_password"/>
        </div>
    </div>
    <div class="form-actions">
        <input type="hidden" name="token" value="{{ csrf_token('') }}">
        <label class="checkbox">
            <input type="checkbox" name="remember" value="1"/> {{'Remember me'|trans}} </label>
        <button type="submit" class="btn blue pull-right">
            {{'Login'|trans}} <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>  
</form>  
{% endblock %}