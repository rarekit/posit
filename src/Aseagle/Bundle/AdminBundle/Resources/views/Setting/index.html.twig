{% extends 'AseagleAdminBundle::layout.html.twig' %} 

{% block content %}
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-layers font-green-sharp"></i> <span class="caption-subject font-green-sharp bold uppercase">{{ 'Settings'|trans }}</span>
        </div>
        <div class="actions">
            <a href="{{ path('admin_setting_new') }}" class="btn btn-circle btn-default"> <i class="fa fa-plus"></i> <span class="hidden-480"> {{ 'New'|trans }}</span>
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-container">            
            <table class="table table-striped table-bordered table-hover" id="datatable_ajax" data-length="50"  data-url="{{ path('admin_setting') }}">
                <thead>
                    <tr role="row" class="heading">
                        <th width="1%"><input type="checkbox" class="group-checkable"></th>
                        <th width="25%">{{ 'Setting Name'|trans }}</th>
                        <th width="10%">{{ 'Key'|trans }}</th>
                        <th width="40%">{{ 'Setting Value'|trans }}</th>
                        <th width="10%">{{ 'Actions'|trans }}</th>
                    </tr>
                    <tr role="row" class="filter">
                        <td></td>
                        <td>{{ form_widget(formFilter.name) }}</td>
                        <td>{{ form_widget(formFilter.key) }}</td>
                        <td>{{ form_widget(formFilter.value) }}</td>                        
                        <td>
                            <div class="margin-bottom-5">
                                <button class="btn btn-sm yellow filter-submit margin-bottom">
                                    <i class="fa fa-search"></i> {{ 'Search'|trans }}
                                </button>
                            </div>
                            <button class="btn btn-sm red filter-cancel">
                                <i class="fa fa-times"></i> {{ 'Reset'|trans }}
                            </button>
                        </td>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
